<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.jediDroid.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
    
<!--     Ponemos la aplicacion en modo debug -->
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="true" >
<!--    Esta actividad al tener el MAIN, estamos indicando que es la primera  -->
<!--    activity que se lanza al arrancar la aplicación y con el LAUNCHER, indicamos que  -->
<!--    la aplicación tiene que salir en el menu de aplicaciones del movil. -->
        <activity
            android:name=".JediDroidActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="CalculadoraActivity"></activity>
        <activity android:name="ReproductorActivity"></activity>
        <activity android:name="MemoryActivity"></activity>
        <activity android:name="RankingActivity"></activity>
        
        <service android:name="org.jediDroid.service.ReproductorService"></service>
    </application>

</manifest>